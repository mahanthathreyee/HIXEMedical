<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminMenu">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">
        <Button
            android:id="@+id/admin_menu_add_carer_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Carer"/>
        <Button
            android:id="@+id/admin_menu_view_carer_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View/Modify/Delete Carer Record"/>
    </LinearLayout>
    <Button
        android:id="@+id/admin_menu_logout_btn"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"/>
</RelativeLayout>